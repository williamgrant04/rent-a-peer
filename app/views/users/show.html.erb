<%# This page is the one that shows when you go to /user/:id/profile so no edit actions should be available %>

<div class="page">
  <div class="banner-image" style='background-image: url(<%= @user.banner_image.key ? "#{cl_image_path @user.banner_image.key}" : "" %>);'>
  </div>

  <div class="profile-image">
    <%= cl_image_tag(@user.profile_image.key) %>
  </div>

  <div class="user-details">
    <h3><%= @user.location.capitalize %></h3>
    <h1><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h1>
    <h3><%= @user.first_name.capitalize %>'s services</h3>
    <%= link_to 'Add Service', new_user_service_path, class: "new-service" %>
    <div class="service-chips">
      <% @services.each do |service| %>
        <%= link_to service.name.capitalize, service_path(service), class: "chip" %>
      <% end %>
    </div>
  </div>
</div>
