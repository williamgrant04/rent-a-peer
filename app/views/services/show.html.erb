<div class=" mx-5 my-5 container-services-show">
  <div class="d-flex flex-row-reverse align-items-start">
  <%= link_to "Create listing", new_service_listing_path(@service), class: "btn btn-primary" %>
  </div>
  <div class="services-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.ctfassets.net/0gqf8nju6pz6/3A6EcER4SuhrqFjAPrwxBq/f125abfda235d8c86637d605df13ed3c/cleaning-tools-hero.jpeg);">
    <div class="banner-text-container">
      <h1><%=@service.name%></h1>
      <p>Who is gonna be your <%=@service.name.downcase %> hero?</p>
    </div>
  </div>
<div class="services-headers">
  <h2>Choose from our best <%=@service.name%> peers</h2>
</div>

  <% @listings.each do |listing| %>
    <div class="user-listings">
      <div class="user-service-card">
	      <img src=<%=cl_image_path(listing.user_service.user.profile_image.key)%>>
	    <div class="user-service-card__text-column">
        <div class="name-and-rating">
          <h2><%=listing.user_service.user.first_name %></h2>
          <h2>4,2/5</h2>
      </div>
        <p><%=listing.description %></p>
        <p class="rates"><%=(listing.hourly_rate).round %>â‚¬ / hour</p>
        <%=link_to "Book #{listing.user_service.user.first_name}", new_service_listing_booking_path(@service, listing) %>
	    </div>
  </div>
</div>
  <% end %>

</div>
